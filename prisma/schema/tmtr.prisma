model Link {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  shortCode     String    @unique @default(nanoid(8))
  longUrl       String
  alias         String?
  isActive      Boolean   @default(true)
  title         String?
  description   String?
  image         String?
  password      String?
  clickCount    Int       @default(0)
  lastClickedAt DateTime?
  expiresAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  tags          Tag[]
  clicks        Click[]

  @@unique([clickCount])
  @@unique([alias, userId])
  @@index([userId])
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([linkId])
  @@index([createdAt])
}