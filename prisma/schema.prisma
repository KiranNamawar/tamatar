generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  firstName     String?
  lastName      String?
  email         String    @unique
  password      String?
  verifiedEmail Boolean?  @default(false)
  username      String    @unique @default(nanoid(8))
  googleId      String?   @unique
  picture       String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  session       Session[]
  otp           Otp[]
}

enum Role {
  USER
  ADMIN
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  isValid   Boolean  @default(true)
  userAgent String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Otp {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  code      String     @unique
  purpose   OtpPurpose @default(VERIFY_EMAIL)
  mailId   String?
  expiresAt DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}

enum OtpPurpose {
  SIGNUP
  LOGIN
  FORGOT_PASSWORD
  VERIFY_EMAIL
}
